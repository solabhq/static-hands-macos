{
  "title": "Static Hands - Basic",
  "rules": [
    {
      "description": "Static Hands Basic Configuration",
      "manipulators": [
        {
          "description": "Core: CapsLock acts as a modifier (single press disabled)",
          "from": {
            "key_code": "caps_lock",
            "modifiers": {
              "optional": ["any"]
            }
          },
          "to": [
            {
              "set_variable": {
                "name": "caps_lock_is_on",
                "value": 1
              }
            }
          ],
          "to_after_key_up": [
            {
              "set_variable": {
                "name": "caps_lock_is_on",
                "value": 0
              }
            }
          ],
          "type": "basic"
        },
        {
          "description": "CapsLock + I: Up Arrow",
          "from": {
            "key_code": "i",
            "modifiers": {
              "optional": ["any"]
            }
          },
          "to": [
            {
              "key_code": "up_arrow"
            }
          ],
          "conditions": [
            {
              "name": "caps_lock_is_on",
              "type": "variable_if",
              "value": 1
            }
          ],
          "type": "basic"
        },
        {
