{
  "title": "Static Hands - Advanced (macOS)",
  "rules": [
    {
      "description": "CapsLock as Modifier (Required - Enable First!)",
      "manipulators": [
        {
          "type": "basic",
          "description": "CapsLock \u2192 Static Hands Mode (Esc if alone)",
          "from": {
            "key_code": "caps_lock",
            "modifiers": {
              "optional": [
                "any"
              ]
            }
          },
          "to": [
            {
              "set_variable": {
                "name": "static_hands_mode",
                "value": 1
              }
            }
          ],
          "to_after_key_up": [
            {
              "set_variable": {
                "name": "static_hands_mode",
                "value": 0
              }
            }
          ],
          "to_if_alone": [
            {
              "key_code": "escape"
            }
          ]
        }
      ]
    },
    {
      "description": "Static Hands - Modifier Keys (W/S/D/F)",
      "manipulators": [
        {
          "type": "basic",
          "description": "W \u2192 Command Mode (hold W to use Command with other keys)",
          "from": {
            "key_code": "w"
          },
          "to": [
            {
              "set_variable": {
                "name": "command_mode",
                "value": 1
              }
            }
          ],
          "to_after_key_up": [
            {
              "set_variable": {
                "name": "command_mode",
                "value": 0
              }
            }
          ],
          "conditions": [
            {
              "type": "variable_if",
              "name": "static_hands_mode",
              "value": 1
            }
